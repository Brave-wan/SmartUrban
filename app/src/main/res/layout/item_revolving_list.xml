<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp">

    <ImageView
        android:id="@+id/img_revolving_head"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_revolving_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_revolving_state"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/img_revolving_head"
        android:ellipsize="end"
        android:paddingLeft="10dp"
        android:text="城南小镇变化大"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_revolving_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_revolving_title"
        android:layout_toRightOf="@+id/img_revolving_head"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="阿里妈妈MUX倾力打造的矢量图标管理、交流平台阿里妈妈MUX倾力打造的矢量图标管理、交流平台"
        android:textColor="#555555"
        android:textSize="10sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_revolving_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_my_revolving_review"
        android:paddingBottom="3dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp"
        android:text="待审核"
        android:textColor="@color/white" />

</RelativeLayout>