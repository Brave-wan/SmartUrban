<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#36000000"
    android:orientation="vertical"
    android:paddingBottom="@dimen/base_dimen_30">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txwCanel"
        android:layout_marginLeft="@dimen/base_dimen_20"
        android:layout_marginRight="@dimen/base_dimen_20"
        android:background="@drawable/shape_popu"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txwCamera"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_96"
            android:gravity="center"
            android:text="相机"
            android:textColor="@color/frameblue"
            android:textSize="@dimen/base_dimen_28" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_1"
            android:background="@color/gray_line" />

        <TextView
            android:id="@+id/txwAlbum"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_96"
            android:gravity="center"
            android:text="相册"
            android:textColor="@color/frameblue"
            android:textSize="@dimen/base_dimen_28" />
    </LinearLayout>

    <TextView
        android:id="@+id/txwCanel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_96"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/base_dimen_30"
        android:layout_marginLeft="@dimen/base_dimen_20"
        android:layout_marginRight="@dimen/base_dimen_20"
        android:background="@drawable/shape_popu"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/frameblue"
        android:textSize="@dimen/base_dimen_28" />
</RelativeLayout>