<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/img_lost_head"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tx_dynamic_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_my_revolving_review_red"
        android:paddingBottom="3dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp"
        android:text="审核中"
        android:textColor="@color/white"
        android:textSize="10sp" />


    <TextView
        android:id="@+id/tv_lost_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/img_lost_head"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:text="阿里妈妈MUX倾力打造的矢量图标管理"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_dynamic_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_lost_title"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/img_lost_head"
        android:maxLines="2"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:text="阿里妈妈MUX倾力打造的矢量图标管理阿里妈妈MUX倾力打造的矢量图标管理"
        android:textColor="#555555"
        android:textSize="14sp" />

</RelativeLayout>