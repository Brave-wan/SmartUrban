<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_title_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/base_dimen_100"
    android:background="@color/white"
    android:visibility="gone">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBaseline="@+id/button_backward"
        android:layout_alignBottom="@+id/button_backward"
        android:layout_toLeftOf="@+id/button_forward"
        android:layout_toRightOf="@+id/button_backward"
        android:ellipsize="end"
        android:gravity="center_horizontal|center"
        android:lines="1"
        android:singleLine="true"
        android:text="title bar"
        android:textColor="@color/MeiYou_them_title"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/button_backward"
        android:layout_width="@dimen/base_dimen_120"
        android:layout_height="match_parent"
        android:clickable="true"
        android:drawableLeft="@drawable/icon_back"
        android:drawablePadding="@dimen/base_dimen_6"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingLeft="@dimen/base_dimen_18"
        android:singleLine="true"
        android:textSize="@dimen/base_dimen_36" />

    <TextView
        android:id="@+id/button_forward"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:drawablePadding="@dimen/base_dimen_6"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingRight="@dimen/base_dimen_18"
        android:singleLine="true"
        android:text="submit"
        android:textSize="16sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/layout_title_bar_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@color/gray_line" />

</RelativeLayout>