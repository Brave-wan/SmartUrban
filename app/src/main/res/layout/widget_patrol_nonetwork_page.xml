<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/no_network_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_dimen_180"
        android:src="@drawable/layout_empty_wifi" />

    <TextView
        android:id="@+id/no_network_st"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_dimen_90"
        android:text="数据加载异常"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/no_network_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_dimen_20"
        android:text="请检查您的手机是否联网"
        android:textColor="#73828E" />

    <TextView
        android:id="@+id/no_network_reload_btn"
        android:layout_width="@dimen/base_dimen_240"
        android:layout_height="@dimen/base_dimen_84"
        android:layout_marginTop="@dimen/base_dimen_100"
        android:background="@drawable/shape_widget_error_tx_bg"
        android:clickable="true"
        android:gravity="center"
        android:text="刷新"
        android:textColor="#35ABFF" />


</LinearLayout>