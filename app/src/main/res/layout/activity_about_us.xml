<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_version_layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="50dp">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@mipmap/ic_launcher_round"
            android:paddingBottom="@dimen/base_dimen_80"
            android:paddingTop="@dimen/base_dimen_80" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:paddingBottom="@dimen/base_dimen_20"
            android:text="桥西智慧城管"
            android:textColor="@color/black"
            android:textSize="@dimen/base_dimen_36" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/base_dimen_60"
            android:paddingTop="@dimen/base_dimen_20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="@dimen/base_dimen_20"
                android:text="当前版本:"
                android:textColor="@color/black"
                android:textSize="@dimen/base_dimen_28" />

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="@dimen/base_dimen_20"
                android:text="1.0.1"
                android:textColor="@color/black"
                android:textSize="@dimen/base_dimen_28" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_2"
            android:background="@color/gray_line" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_default">

        <Button
            android:id="@+id/btn_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_dimen_30"
            android:layout_marginRight="@dimen/base_dimen_30"
            android:layout_marginTop="@dimen/base_dimen_100"
            android:background="@drawable/shape_login_btn"
            android:text="检查更新"
            android:textColor="@color/white"
            android:textSize="@dimen/base_dimen_32" />
    </LinearLayout>
</LinearLayout>