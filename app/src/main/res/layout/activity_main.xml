<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_main_line" />

    <TextView
        android:id="@+id/tv_main_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/rg_main_bottom"
        android:background="@color/gray_line" />

    <RadioGroup
        android:id="@+id/rg_main_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <RadioButton
            android:id="@+id/radio_main_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawableTop="@drawable/main_radio_home"
            android:gravity="center"
            android:text="首页"
            android:textColor="@drawable/select_home_tx_color"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/radio_main_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawableTop="@drawable/main_radio_info"
            android:gravity="center"
            android:text="资讯"
            android:textColor="@drawable/select_home_tx_color"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/radio_main_camera"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawableTop="@drawable/main_radio_camera"
            android:gravity="center"
            android:text="随手拍"
            android:textColor="@drawable/select_home_tx_color"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/radio_main_center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawableTop="@drawable/main_radio_center"
            android:gravity="center"
            android:text="我的"
            android:textColor="@drawable/select_home_tx_color"
            android:textSize="12sp" />
    </RadioGroup>

</RelativeLayout>
